<!DOCTYPE html>
<html lang="en">

    <%- include('partials/head', {title: 'Home'}) %>

<body>
    <%- include('partials/header') %>
    <main>
        <!---------------------------- CARRUSEL DE FOTOS ---------------------------->
        <!-- contenerdor carrusel -->
        <section class="banner">
            <div class="contenedorDelCarrusel1">

                <!-- Full-width images with number and caption text -->
                <div class="mySlides1 fade">
                    <!-- <div class="numbertext">1 / 3</div> -->
                    <img src="/img/banner1.jpg" style="width:100%" class="imgBanner">
                    <!-- <div class="textCarrusel1">Caption Text</div> -->
                </div>

                <div class="mySlides1 fade">
                    <!-- <div class="numbertext">2 / 3</div> -->
                    <img src="/img/banner2.jpg" style="width:100%" class="imgBanner">
                    <!-- <div class="textCarrusel1">Caption Two</div> -->
                </div>

                <div class="mySlides1 fade">
                    <!-- <div class="numbertext">3 / 3</div> -->
                    <img src="/img/banner3.jpg" style="width:100%" class="imgBanner">
                    <!-- <div class="textCarrusel1">Caption Three</div> -->
                </div>

                <!-- Next and previous buttons -->
                <!-- <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next" onclick="plusSlides(1)">&#10095;</a> -->
            </div>
            <br>

            <!-- The dots/circles -->
            <div style="text-align:center">
                <span class="dot" onclick="currentSlide(1)"></span>
                <span class="dot" onclick="currentSlide(2)"></span>
                <span class="dot" onclick="currentSlide(3)"></span>
            </div>
            <!---------------------------- FIN DEL CARRUSEL DE FOTOS ---------------------------->
           

            <!---------------------------- REDES SOCIALES ---------------------------->

            <div class="iconosRedesSociales">
                <a href="#"><i class="fa-brands fa-whatsapp"></i></a>
                <a href="https://www.youtube.com/"><i class="fa-brands fa-youtube"></i></a>
                <a href="#"><i class="fa-brands fa-facebook"></i></a>
                <a href="#"><i class="fa-brands fa-instagram"></i></a>
                <a href="#"><i class="fa-brands fa-twitter"></i></a>
            </div>

        </section>
        <!----------------------------  ---------------------------->

        <div class="caracteristicasVentas">
            <h3>Objetos populares</h3>
            <h3>Envíos gratis</h3>
            <h3>Pagos sin interés</h3>
        </div>

        <!---------------------------- CARRUSEL DE PRODUCTOS ---------------------------->
        <!--------- VER COMO HACER PARA QUE EN MOBILE APAREZCAN DOS PRODUCTOS Y EN DESKTOP SE VEAN 4 --------->
        <!-- contenerdor carrusel -->
        <div class="carruselAnimado">
            <figure class="icon-cards mt-3">
                <div class="icon-cards__content">
                    <% for(let i = 0; i < 5; i++){ %> 
                    <div class="icon-cards__item d-flex align-items-center justify-content-center">
                        <div class="product_infoCard">
                            <img src=<%= offerProducts[i].imagen1 %>  alt="">
                            <h4> <%= offerProducts[i].name %> </h4>
                        </div>
                    </div>
                    <% } %> 
                </div>
            </figure>
        </div>



        <!---------------------------- FIN DEL CARRUSEL DE PRODUCTOS ---------------------------->


        <!---------------------------- CATEGORIAS DE PRODUCTOS ---------------------------->
        <section>
            <h2 class="subtitulos">Nuestros productos</h2>
            <!-- EN LUGAR DE CATEGORIAS EN GENERAL TOMAMOS SUBDIVISIONES DE LOS PRODUCTOS -->
            <div class="nuestrosProductos">
                <div class="columnaProductos">
                    <a href="/products/verMas" class="nuestrosProductos1">
                        <h3>Tazas, llaveros, pins, aros</h3>
                    </a>
                    <a href="/products/verMas" class="nuestrosProductos2">
                        <h3>Indumentaria y accesorios</h3> <!-- Ropa, mochilas, billeteras, bolsos -->
                    </a>
                </div>
                <div class="columnaProductos">
                    <a href="/products/verMas" class="nuestrosProductos3">
                        <h3>Figuras</h3>
                    </a>
                    <a href="/products/verMas" class="nuestrosProductos4">
                        <h3>Pósters y cuadros</h3>
                    </a>
                    <a href="/products/verMas" class="nuestrosProductos5">
                        <h3>Mangas y comics</h3>
                    </a>
                </div>


            </div>
        </section>

        <!---------------------------- PRODUCTOS EN OFERTA ---------------------------->
        <section>
            <h2 class="subtitulos">Productos en oferta</h2>


            <!-- BUSCAR IMAGENES CUADRADAS O VERTICALES PARA PONER COMO PRODUCTOS -->

            <div class="cajaConProductosEnOferta">
                <div class="cajaConProductosEnOferta">
                    <% offerProducts.slice(0, 8).forEach(function(product){ %>
                    <% let precioActual = (product.precioAnterior - ((100 * product.descuento) / product.precioAnterior)).toFixed(0) %> 
                        <div class="productosEnOferta">
                            <a href="/products/ <%= product.id %>"> <img src= <%= product.imagen1 %> alt=""></a>
                            <div>
                                <h4><%= product.name %></h4>
                                <p class="porcentajeDescuento">- <%= product.descuento %> % off</p>
                                <p class="precioAnterior">$ <%= product.precioAnterior %> </p>
                                <p class="precioActual">$ <%= product.precioAnterior * (100-product.descuento) /100 %>  </p>
                                <a href="/products/cart" id="linkBotonAgregar"><button onclick="" class="botonAgregar">Agregar al carrito</button></a>
                            </div>
                        </div>  
                        <% }) %> 
                </div>

            </div>
        </section>

    </main>

    <%- include('partials/footer') %>

    <script src="/js/script.js"></script>
</body>

</html>